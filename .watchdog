DIRS+="$HOME/projects/mercurial/hgattic "
DIRS+="$HOME/projects/mercurial/hgshelve "
DIRS+="$HOME/projects/mercurial/hgbb "

for dir in $DIRS; do
  name=$(basename $(dirname $dir))/$(basename $dir)
  if [[ -d $dir && -z $(psgrep "$name ") ]]; then
    hgwatch $dir &
  fi
done;
