# Make vim the default editor
export EDITOR="emacsclient -n -f $HOME/.emacs.d/server/server"
# Don't clear the screen after quitting a manual page
export MANPAGER="less -X"
export GREP_OPTIONS="--binary-files=without-match --directories=skip --color=auto"
export LESS="-R --ignore-case --quit-if-one-screen --quit-on-intr"

# Have bash ignore the .DS_Store
export FIGNORE=DS_Store

# Larger bash history (allow 32Â³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE

export PROJECTS=$HOME/projects
export SANDBOX=$HOME/sandbox
export PHD=$PROJECTS/phd

export PETSC_DIR=$PROJECTS/petsc
export PETSC_ARCH=arch-c
export PETSC_OPTIONS="-malloc_test"

export CDPATH=.:$PROJECTS:$HOME

##
# Paths, environment variables
##

# make clean tarballs
export COPYFILE_DISABLE=true

if [ -d /opt/local ]; then
  export PATH=/opt/local/bin:/opt/local/sbin:/opt/local/libexec/gnubin:$PATH
  export MP=$PROJECTS/macports/dports
  if [ -d /opt/local/lib/petsc ]; then
    export PETSC_DIR=/opt/local/lib/petsc
    export PETSC_ARCH=
  fi
fi

if [ -d $HOME/.local/bin ]; then
  export PATH=$HOME/.local/bin:$PATH
fi

if [ -d /usr/local/cuda ]; then
  export PATH=/usr/local/cuda/bin:$PATH
fi

if [ -d $HOME/.local/lib/python ]; then
  export PYTHONPATH=$HOME/.local/lib/python/site-packages:$HOME/.local/lib/python:$PYTHONPATH
fi

if [ -d $HOME/.local/lib/python2.6 ]; then
  export PYTHONPATH=$HOME/.local/lib/python2.6/site-packages:$HOME/.local/lib/python2.6:$PYTHONPATH
fi

if [ -d $HOME/.local/lib/python2.7 ]; then
  export PYTHONPATH=$HOME/.local/lib/python2.7/site-packages:$HOME/.local/lib/python2.7:$PYTHONPATH
fi

if [ -d /cygdrive/c ]; then
  export PYTHONHOME=C:\\Python27
  export PYTHONPATH=$PYTHONHOME\\Lib
  export MSSdk=1
  export DISTUTILS_USE_SDK=1
  export PATH=~/projects/hg:$PATH

  # replicate functionality of vcvarsall.bat
  export VS110COMNTOOLS="C:\\Program Files (x86)\\Microsoft Visual Studio 11.0\\Common7\\Tools\\"
  export VS120COMNTOOLS="C:\\Program Files (x86)\\Microsoft Visual Studio 12.0\\Common7\\Tools\\"
  export VSINSTALLDIR="C:\\Program Files (x86)\\Microsoft Visual Studio 12.0\\"
  export VCINSTALLDIR="C:\\Program Files (x86)\\Microsoft Visual Studio 12.0\\VC\\"
  export WindowsSdkDir="C:\\Program Files (x86)\\Windows Kits\\8.1\\"
  export WindowsSDK_ExecutablePath_x86="C:\\Program Files (x86)\\Microsoft SDKs\\Windows\\v8.1A\\bin\\NETFX 4.5.1 Tools\\"
  export WindowsSDK_ExecutablePath_x64="C:\\Program Files (x86)\\Microsoft SDKs\\Windows\\v8.1A\\bin\\NETFX 4.5.1 Tools\\x64\\"
  export FrameworkDir="C:\\WINDOWS\\Microsoft.NET\\Framework64"
  export FrameworkDIR64="C:\\WINDOWS\\Microsoft.NET\\Framework64"
  export FrameworkVersion="v4.0.30319"
  export FrameworkVersion64="v4.0.30319"
  export Framework40Version="v4.0"

  export PATH="$(cygpath "$WindowsSdkDir")/bin/x64:$(cygpath "$VS120COMNTOOLS"):$PATH"
  export PATH="$(cygpath "$VSINSTALLDIR")/Common7/IDE:$(cygpath "$VCINSTALLDIR")/bin/amd64:$PATH"
  export PATH="$(cygpath "C:\\Program Files (x86)\\MSBuild\\12.0\\bin\\amd64"):$PATH"
  export INCLUDE="$WindowsSdkDir\\include\\shared;$WindowsSdkDir\\include\um;$WindowsSdkDir\\include\winrt;$INCLUDE"

  export Platform=X64
  export VisualStudioVersion=12.0
fi
