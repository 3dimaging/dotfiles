from IPython.core.debugger import Pdb
originit = Pdb.__init__
def pdbinit(*args, **kwargs):
    fin = open('/dev/tty', 'r')
    fout = open('/dev/tty', 'w')
    originit(*args, stdin=fin, stdout=fout, **kwargs)
Pdb.__init__ = pdbinit
import ipdb; ipdb.set_trace()
trace = 1
