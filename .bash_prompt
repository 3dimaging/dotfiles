if [ -t 0 ]; then

  if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then export TERM=gnome-256color
  elif infocmp xterm-256color >/dev/null 2>&1; then export TERM=xterm-256color
  fi

  MAGENTA=$(tput setaf 9)
  ORANGE=$(tput setaf 172)
  GREEN=$(tput setaf 190)
  PURPLE=$(tput setaf 5)
  WHITE=$(tput setaf 240)
  BOLD=$(tput bold)
  RESET=$(tput sgr0)

  parse_git_dirty () {
    [[ $(git status 2> /dev/null | tail -1) != "nothing to commit (working directory clean)" ]] && echo "*"
  }
  parse_git_hg_branch () {
    GIT=$(git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\1$(parse_git_dirty)/")
    HG=$(fast-hg-bookmark 2> /dev/null)$(fast-hg-status 2> /dev/null)
    if [[ -n $GIT ]]; then
      printf "$WHITE on $PURPLE$GIT"
    elif [[ -n $HG ]]; then
      printf "$WHITE on $PURPLE$HG"
    fi
  }

  PS1="\[$MAGENTA\]\u \[$WHITE\]at \[$ORANGE\]\h \[$WHITE\]in \[$GREEN\]\w\$(parse_git_hg_branch)\[$WHITE\]\n\$ \[$RESET\]"

##
# colored highlighting is awesome
##

  if [ "$TERM" != "dumb" ];then
    if [ -x /opt/local/bin/gdircolors ]; then
      eval "`gdircolors -b ~/.dir_colors`"
    elif [ -x "$(which dircolors 2>/dev/null)" ]; then
      dircolors -b ~/.dir_colors 2>&1 > /dev/null
    fi
  fi

fi
