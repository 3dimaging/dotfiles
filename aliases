# Easier navigation: ~ and -
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# keep aliases for sudo
alias sudo="sudo "

# List all files colorized in long format, including dot files
alias la="ls -Gla"

# List only directories
alias lsd='ls -l | grep "^d"'

# IP addresses
alias wanip="curl -s https://4.ifcfg.me"
alias wanip6="curl -s https://6.ifcfg.me"
alias localips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"
alias localip="localips | grep -v 127.0.0.1"

# Flush Directory Service cache
alias flush="dscacheutil -flushcache"

# View HTTP traffic
alias sniff="sudo ngrep -d 'en1' -t '^(GET|POST) ' 'tcp and port 80'"
alias httpdump="sudo tcpdump -i en1 -n -s 0 -w - | grep -a -o -E \"Host\: .*|GET \/.*\""

# Start an HTTP server from a directory
alias server="open http://localhost:8080/ && python -m SimpleHTTPServer 8080"

# Trim new lines and copy to clipboard
alias c="tr -d '\n' | pbcopy"

# Shortcuts
alias e="$HOME/.edit.sh -n"
alias E="SUDO_EDITOR=\"$HOME/.edit.sh\" sudo -e"
alias gda="gdb --args"
alias s="perl -pi -e"
alias l="less"
alias h="hg"
alias lhg="HGDEMANDIMPORT=disable $HOME/projects/hg/hg"
alias hg-git="hg --config extensions.hggit="

# File size
alias fs="/usr/bin/stat -f \"%z bytes\""

# ROT13-encode text. Works for decoding, too! ;)
alias rot13='tr a-zA-Z n-za-mN-ZA-M'

# Disable Spotlight
alias spotoff="sudo mdutil -a -i off"
# Enable Spotlight
alias spoton="sudo mdutil -a -i on"

[ -n "$(ls --version 2>/dev/null)" ] && alias ls='ls --color=auto'
alias dir='ls --color=auto --format=vertical'
alias vdir='ls --color=auto --format=long'

if [ "$(echo test | grep --color=auto te 2>/dev/null)" == "te" ];then
   alias grep='grep --color=auto'
   alias fgrep='fgrep --color=auto'
   alias egrep='egrep --color=auto'
fi
alias g='grep -i'

if [ -s "$(which chg 2>/dev/null)" ]; then
  alias hg=chg
fi
