[ui]
username = Sean Farley <sean@mcs.anl.gov>
ssh = ssh -C

[diff]
git = True

[defaults]
# update working directory after adding changesets
pull = -u

[extensions]
hgext.graphlog = 
hgext.extdiff =
hgext.bookmarks =
hgext.mq =
hgext.rebase =
hgext.convert =
hgext.hgk =
hggit = 
hgshelve = 
hgsubversion = 

[extdiff]
cmd.vdiff = fmdiff
#cmd.kdiff3 = kdiff3

[merge-patterns]
** = filemerge

[merge-tools]
filemerge.executable = fmdiff3
filemerge.args = -m $local $base $other > $output
filemerge.checkconflicts = true
filemerge.checkchanged = true
filemerge.gui = true
